{
    "name": "nierto/nCore",
    "description": "Modular WordPress theme development framework",
    "type": "wordpress-theme",
    "license": "nCore",
    "require": {
        "php": ">=7.4",
        "composer/installers": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "nCore\\": "core/",
            "nCore\\Modules\\": "modules/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    }
}
